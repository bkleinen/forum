<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Answer to</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.answer_to %></td>
    <td><%= post.user_id %></td>
  <td><%= link_to 'Show', topic_post_path(post.topic,post) %></td>
  <td><%= link_to 'Edit', edit_topic_post_path(post.topic,post) %></td>
   <td><%= link_to 'Destroy', topic_post_path(post.topic,post), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

